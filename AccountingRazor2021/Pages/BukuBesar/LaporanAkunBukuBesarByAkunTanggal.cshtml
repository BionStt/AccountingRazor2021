@page
@model AccountingRazor2021.Pages.BukuBesar.LaporanAkunBukuBesarByAkunTanggalModel
@{
    ViewData["Title"] = "Laporan Akun Buku Besar Berdasarkan Akun";
    Layout = "~/Pages/Shared/AdminLTE/_Layout.cshtml";
}
<style>
    table, th, td {
        border: 1px solid black;
    }
</style>

<h2>LapAkunBukuBesar</h2>
<form method="post">
    <table class="table table-bordered table-striped grid">
        <tr>
            <th>Kode Akun - Nama Akun</th>
            <th>Periode Awal</th>
            <th>Periode Akhir</th>
            <th>Tindakan </th>
        </tr>
        <tr>

            <td>

                <select name="Akun1" asp-items="@ViewBag.Akun1"></select>
            </td>
            <td><input type="datetime-local" name="PeriodeAwal"/></td>
            <td><input type="datetime-local" name="PeriodeAkhir"/></td>
            <td>   <input type="submit" value="Tampilkan" class="btn btn-default" /></td>
        </tr>
    </table>
</form>


@if (Model.listDataJournalDetailsByAkunTanggalResponse != null)
{


    <h2>Laporan Buku Besar</h2>

    <div>
        <p>Akun : @ViewBag.dtNamaAkun2</p>
        <p>Periode Awal : @ViewBag.PeriodeAwalA</p>
        <p>Periode Akhir : @ViewBag.PeriodeAkhirA </p>
        <p style="text-align:center">Rincian Buku Besar</p>
        <table  style="width:100%">

            @{int i = 1;
                Decimal? debit11 = 0;
                decimal? kredit22 = 0;
                decimal? saldo1 = 0;
            }
            @if (Model == null) { }
            else
            {
                <tr>
                    <th>No.</th>
                    <th>Tanggal</th>
                    <th>No Bukti</th>
                    <td>Keterangan</td>
                    @*<th>Kode Akun - Akun</th>*@
                    <th>Debit</th>
                    <th>Kredit</th>
                    <th>Saldo</th>
                </tr>
                @foreach (var item in Model.listDataJournalDetailsByAkunTanggalResponse)
                {
                    saldo1 = saldo1 + (item.Debit1 - item.Kredit1);
                    <tr>
                        <td style="text-align:center">@i</td>
                        <td>
                            @string.Format("{0:d}", item.TanggalInput)
                        </td>
                        <td>@item.NoBuktiJurnal</td>
                        <td>@item.Keterangan</td>
                        @*@if (item.Debit1 != 0 && item.Kredit1 == 0)
                            {
                                <td  >@item.KodeNamaAkun</td>}
                            else
                            {
                                <td style="padding-left:43px">@item.KodeNamaAkun</td>}*@

                        <td style="text-align:right">
                            @string.Format("{0:c0}", item.Debit1)
                        </td>
                        <td style="text-align:right">
                            @string.Format("{0:c0}", item.Kredit1)
                        </td>
                        <td>
                            @string.Format("{0:c0}", saldo1)
                        </td>
                    </tr>
                    debit11 = debit11 + item.Debit1;
                    kredit22 = kredit22 + item.Kredit1;
                    i++;
                }
                <tr>

                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        @if (debit11 < kredit22)
                        {
                            <p style="color:red;text-align:center">Tidak Seimbang</p>
                        }
                        else if (debit11 > kredit22)
                        { <p style="color:red;text-align:center">Tidak Seimbang</p> }
                        else
                        { <p style="text-align:center">Seimbang</p>}

                    </td>
                    <td style="text-align:right">   @string.Format("{0:c0}", debit11)</td>
                    <td style="text-align:right">@string.Format("{0:c0}", kredit22)</td>
                </tr>

            }

        </table>
    </div>
    <div class="report-footer">
        <table class="table table-bordered table-striped grid">
            <tr>
                <td colspan="3">Dibuat Oleh</td>
                <td colspan="3">Disetujui Oleh</td>
            </tr>
            <tr>
                <td></td>
                <td></td>
            </tr>
        </table>
    </div>




}