@page
@model AccountingRazor2021.Pages.BukuBesar.LaporanAkunBukuBesarByAkunModel
@{
    ViewData["Title"] = "Laporan Akun Buku Besar Berdasarkan Akun";
}
<h2>LapAkunBukuBesar</h2>
<form method="post">
    <table class="table table-bordered table-striped grid">
        <tr>
            <th>Kode Akun - Nama Akun</th>
            <th>Tindakan </th>
        </tr>
        <tr>
           
            <td>

                <select name="Akun1" asp-items="@ViewBag.Akun1"></select>
            </td>
            <td>   <input type="submit" value="Tampilkan" name="NamaAkun1" class="btn btn-default" /></td>
        </tr>
    </table>
</form>


@if (Model.listDataJournalDetailsByAkunResponse != null)
{


    <h2>Laporan Buku Besar</h2>

    <div>
        <p>Akun : @ViewBag.dtNamaAkun2</p>
        <p style="text-align:center">Rincian Buku Besar</p>
        <table class="table table-bordered table-striped grid" style="width:100%">
            
            @{int i = 1;
                Decimal? debit11 = 0;
                decimal? kredit22 = 0;
                decimal? saldo1 = 0;
            }
            @if (Model == null) { }
            else
            {
                <tr>
                    <th>No.</th>
                    <th>Tanggal</th>
                    <th>No Bukti</th>
                    <td>Keterangan</td>
                    @*<th>Kode Akun - Akun</th>*@
                    <th>Debit</th>
                    <th>Kredit</th>
                    <th>Saldo</th>
                </tr>
                @foreach (var item in Model.listDataJournalDetailsByAkunResponse)
                {
                    saldo1 = saldo1 + (item.Debit1 - item.Kredit1);
                    <tr>
                        <td>@i</td>
                        <td>
                            @string.Format("{0:d}", item.TanggalInput)
                        </td>
                        <td>@item.NoBuktiJurnal</td>
                        <td>@item.Keterangan</td>
                        @*@if (item.Debit1 != 0 && item.Kredit1 == 0)
                            {
                                <td  >@item.KodeNamaAkun</td>}
                            else
                            {
                                <td style="padding-left:43px">@item.KodeNamaAkun</td>}*@

                        <td style="text-align:right">
                            @string.Format("{0:c}", item.Debit1)
                        </td>
                        <td style="text-align:right">
                            @string.Format("{0:c}", item.Kredit1)
                        </td>
                        <td>
                            @string.Format("{0:c}", saldo1)
                        </td>
                    </tr>
                    debit11 = debit11 + item.Debit1;
                    kredit22 = kredit22 + item.Kredit1;
                    i++;
                }
                <tr>

                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        @if (debit11 < kredit22)
                        {
                            <p style="color:red;text-align:center">Tidak Seimbang</p>
                        }
                        else if (debit11 > kredit22)
                        { <p style="color:red;text-align:center">Tidak Seimbang</p> }
                        else
                        { <p style="text-align:center">Seimbang</p>}

                    </td>
                    <td style="text-align:right">   @string.Format("{0:c}", debit11)</td>
                    <td style="text-align:right">@string.Format("{0:c}", kredit22)</td>
                </tr>

            }

        </table>
    </div>
    <div class="report-footer">
        <div class="otorisasi">
            <div class="otorisasi-left">
                <div class="jabatan">Dibuat Oleh</div>
                <div class="nama">Bion</div>
            </div>
            <div class="otorisasi-right">
                <div class="jabatan">Disetujui Oleh</div>
                <div class="nama">Bion</div>
            </div>
            <div style="clear: both;"></div>
        </div>
    </div>




}